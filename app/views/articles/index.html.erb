<h1 class="flex items-center gap-10">
  <span class="text-3xl font-medium">All Articles <%= Article.public_count %></span>
  
   <span class="text-white bg-indigo-600 rounded-xl hover:bg-indigo-900">
    <%= link_to new_article_path, 
      class: 'font-semibold h-8 w-8 p-1' do %>

      <i class="w-5 h-5 ti ti-plus"></i>

    <% end %>
  </span>
</h1>

<ul class="mt-4 space-y-4">

  <% @articles.each do |article| %>

    <% unless article.archived? %>

      <li>

        <div class="pt-6 pb-4 space-y-2">

          <span class="text-xs font-medium">
            <%= article.created_at %>
          </span>

          <h3 class="text-xl font-semibold">
            <%= article.title %>
          </h3>

          <p class="line-clamp-2">
            <%= article.body %>
          </p>

          <%= link_to article_path(article),
            class: 'inline-flex items-center py-2 space-x-2 text-sm dark:text-violet-400 transition duration-300 hover:text-blue-600' do %>
              
            <span>Read more</span>

            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-4 h-4">
              <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
            </svg>

          <% end %>

        </div>

      </li>

    <% end %>

  <% end %>

</ul>

