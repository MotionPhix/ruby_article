<h1 class="flex items-center gap-10">
  <span class="text-2xl font-medium">All Articles</span>
  
   <span class="text-white bg-indigo-600 rounded-xl hover:bg-indigo-900">
    <%= link_to new_article_path, 
      class: 'font-semibold h-8 w-8 p-1' do %>

      <i class="w-5 h-5 ti ti-plus"></i>

    <% end %>
  </span>
</h1>

<ul class="mt-4">

  <% @articles.each do |article| %>

    <li>

      <%= link_to article.title, article_path(article), 
        class: 'underline underline-offset-4 decoration-pink-500 hover:decoration-2 rounded px-4 py-1.5' %>

    </li>

  <% end %>

</ul>

